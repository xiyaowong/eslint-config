{
  "name": "@wongxy/eslint-config",
  "type": "module",
  "version": "0.0.16",
  "description": "xiyaowong's eslint config",
  "author": "xiyaowong (https://github.com/xiyaowong)",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "bin": {
    "eslint-config": "bin/index.js",
    "eslint-config-wongxy": "bin/index.js",
    "wongxy-eslint": "bin/index.js",
    "wongxy-eslint-config": "bin/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsup --format esm,cjs --clean --dts",
    "stub": "tsup --format esm",
    "dev": "tsup --format esm,cjs --watch & eslint-flat-config-viewer",
    "lint": "pnpm run stub && eslint .",
    "lint:fix": "pnpm run stub && eslint . --fix",
    "prepack": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "preview": "eslint-flat-config-viewer",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-react-refresh": "*"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.7.0",
    "parse-gitignore": "^2.0.0",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.5",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.32",
    "bumpp": "^9.3.0",
    "eslint": "^8.57.0",
    "eslint-flat-config-viewer": "^0.1.11",
    "parse-gitignore": "^2.0.0",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "tsup": "^8.0.2",
    "typescript": "5.4.5",
    "yargs": "^17.7.2"
  }
}
