{
  "name": "@wongxy/eslint-config",
  "type": "module",
  "version": "1.1.1",
  "description": "xiyaowong's eslint config",
  "author": "xiyaowong (https://github.com/xiyaowong)",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nr typegen && tsup --format esm,cjs --clean --dts",
    "stub": "tsup --format esm",
    "dev": "tsup --format esm,cjs --watch & eslint-flat-config-viewer",
    "lint": "pnpm run stub && eslint .",
    "lint:fix": "pnpm run stub && eslint . --fix",
    "prepack": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "preview": "eslint-flat-config-viewer",
    "typegen": "esno scripts/typegen.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@eslint-react/eslint-plugin": "^1.5.8",
    "@unocss/eslint-plugin": ">=0.50.0",
    "eslint": ">=8.40.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-tailwindcss": ">=3.17.4"
  },
  "dependencies": {
    "@antfu/eslint-config": "^3.4.1",
    "local-pkg": "^0.5.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.0",
    "@types/node": "^22.4.1",
    "bumpp": "^9.5.1",
    "eslint": "^9.9.0",
    "eslint-flat-config-viewer": "^0.1.20",
    "eslint-typegen": "^0.3.1",
    "esno": "^4.7.0",
    "tsup": "^8.2.4",
    "typescript": "5.4.5"
  }
}
