{
  "name": "@wongxy/eslint-config",
  "type": "module",
  "version": "3.0.0",
  "description": "xiyaowong's eslint config",
  "author": "xiyaowong (https://github.com/xiyaowong)",
  "license": "MIT",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nr typegen && tsdown --clean --dts",
    "stub": "tsdown --format esm",
    "watch": "tsdown --watch",
    "dev": "tsdown --watch & eslint-flat-config-viewer",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "prepack": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "inspect": "nlx @eslint/config-inspector",
    "typegen": "esno scripts/typegen.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@eslint-react/eslint-plugin": "^2.3.1",
    "@next/eslint-plugin-next": "^16.0.1",
    "@unocss/eslint-plugin": "^66.5.4",
    "eslint": "^9.39.1",
    "eslint-plugin-better-tailwindcss": "^3.7.10",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24"
  },
  "dependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "eslint-flat-config-utils": "^2.1.4",
    "local-pkg": "^1.1.2"
  },
  "devDependencies": {
    "@antfu/ni": "^27.0.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "eslint-typegen": "^2.3.0",
    "esno": "^4.8.0",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3"
  }
}
